<h1>Edit the Quote:</h1>
<div>
    @{
        foreach(var error in ViewBag.Errors)
            {
                if(@error.Errors.Count > 0)
                {
                    <p>@error.Errors[0].ErrorMessage</p>
                }
            }
    }
</div>
<form action="/update/@ViewBag.Quote.QuoteId" method="POST">
    <div class="input-group">
        <label for="QuoterName">Your Name:</label>
        <input name="QuoterName" type="text" value="@ViewBag.Quote.QuoterName"/>
    </div>
    <div class="input-group">
        <label for="QuoteContent">Your Quote</label>
        <textarea name="QuoteContent" cols="30" rows="10">@ViewBag.Quote.QuoteContent</textarea>
    </div>
    <input type="hidden" value="@ViewBag.Quote.Likes" name="Likes"/>
    <button type="submit">Update your quote</button>
    <a href="/quotes"><button type="button">Go back to quotes</button><a>
</form>